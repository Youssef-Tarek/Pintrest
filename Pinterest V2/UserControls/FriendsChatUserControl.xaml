<UserControl x:Class="Pinterest_V2.UserControls.FriendsChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <StackPanel Height="40" VerticalAlignment="Center" Margin="10,5,35,5">
            <Ellipse x:Name="ProfilePic" Width="30" Height="30" StrokeThickness="0.5" Stroke="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/images/image2.jpg" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="Friend_Name" Text="Alaa Mostafa" HorizontalAlignment="Left"  Margin="45,-32, 0, 0" FontSize="15" VerticalAlignment="Top" FontFamily="JF Flat"/>
            <Ellipse Name="OnlineCircle" Height="18" Margin="212,-40,-25,0" RenderTransformOrigin="0.611,0.571" Visibility="Visible" Fill="#FFBBB0B0"/>
        </StackPanel>
          <Button Background="{x:Null}" Width="250" Height="50" Click="Button_Click"/>
     </Grid>
</UserControl>
