<Window x:Class="Pinterest.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinterest"
         mc:Ignorable="d"  Height="300" Width="440" Title="Follower"  WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox  x:Name="text" Text="request of friend" HorizontalAlignment="Left" Height="45" Margin="10,37,-256,210" VerticalAlignment="Center" Width="678" Foreground="#DD275FF5" AutomationProperties.Name="name_txt" FontFamily="JF Flat" FontSize="20" Padding="0,-14,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Left" AcceptsReturn="True" BorderThickness="0,0,0,0" VerticalContentAlignment="Bottom" IsReadOnly="True" Cursor="Arrow"/>
        <Button x:Name="button1" Content="confirm" Height="Auto" Margin="10,99,10,150" Click="button1_Click"></Button>
        <Button x:Name="button2" Content="cancel" Margin="10,161,10,93" Height="Auto" Click="button2_Click"></Button>
        <Button x:Name="button3" Content="close" Margin="10,226,10,27" Height="Auto" Click="button3_Click"></Button>
    </Grid>
</Window>
